extends layout

block content
  #main-content.m-scene
    // Header
    nav.navbar
      .full-width-container
        a.navbar-brand(href='/')
          img(src='images/logo.png', width='400', height='45', alt='Logo')
        .fullscreen-menu-holder
          .align-items-center
            .row.col-sm-12.mt-5
              .col-sm-3.col-xs-12.mt-5
                .align-center
                  a(href='/')
                    if (user.photo)
                      img.rounded-circle(src='/photo/#{user._id}', alt='team', width='800', height='800')
                    else if(user.gender == 'Male')
                      img.user-pic.img-responsive.rounded-circle(src='images/male.jpg', alt='picture', height = '570', width = '1200')
                    else if(user.gender == 'Female')
                      img.user-pic.img-responsive.img-rounded-circle(src='images/female.jpg', alt='picture', height = '570', width = '1200')
                  .mt-4
                    h4.text-white #{user.name}
              .col-sm-1
              .col-sm-3.col-xs-12.mt-5
                ul.sidebar-menu.mt-5
                  li
                    a(href='/settings')
                      i.fa.fa-edit.mr-20
                      | Edit Profile
                  li
                    a(href='/match')
                      i.fa.fa-list.mr-20
                      |    My Matches
              .col-sm-1
              .col-sm-3.col-xs-12.mt-5
                ul.sidebar-menu.mt-5
                  li
                    a(href='/messages')
                      i.fa.fa-comments.mr-20
                      |    Messages
                  li
                    a(href='/logout')
                      i.fa.fa-power-off.mr-20
                      |    Logout
            .row.col-sm-12.mt_150
              .col-sm-12.col-xs-12
                hr
                ul.bottom-menu
                  li
                    a(href='/') Home
                  li
                    a(href='/about') About Website
                  li
                    a(href='/algorithm') Algorithm
                  li
                    a(href='/testing') Testing
        button.hamburger-menu-btn.pull-right.for-fullscreen.hamburger-circle
          span toggle menu

      // End Header
      .page-container
        // Page title
        .bg-orange.mb_120.whole-container-text-white.text-center.pt-4.pb-4
          h2 Profile Detail
        // End page title
        // Profile detail
        .mt_80.mb_50
          .container
            .row.mb_60
              // Profile photos
              .col-md-6
                  img(src='/images/team/noname.jpg', alt='picture', width='1200', height='570')
              // End Profile photos
              // Profile info
              .col-md-6
                .sticky-top.mt_10.ml-4
                  h3.font-weight-normal #{matchUser.name}
                  .separator
                  blockquote #{matchUser.bio}
                  .details_list.mt_40.mb_40
                    ul
                      li
                        i.fa.fa-map-marker.orange
                        |    #{matchUser.postcode}
                      li
                        if(matchUser.gender == 'Female')
                          i.fa.fa-female.orange.user-gender
                          |    #{matchUser.gender}
                        else
                          i.fa.fa-male.orange
                          |    #{matchUser.gender}
                      li
                        i.fa.fa-birthday-cake.orange(style='font-size:10px')
                        |    #{age}
                      li
                        i.fa.fa-futbol-o.orange
                        |    #{matchUser.activity}
                      li
                        i.fa.fa-bolt.orange
                        |    #{matchUser.level}
                  div
                    a.top_link.top_link_pad.text-big.pt-3.pb-3.pr-4.pl-4.mr-4(href='/message/#{matchUser._id}')
                      i.fa.fa-comments.mr-1
                      | Chat
                  div
                    a.top_link.top_link_pad.text-big.pt-3.pb-3.pr-4.pl-4(href='mailto:#{matchUser.email}?Subject=Hello! Greetings from Fitness Friends')
                      i.fa.fa-envelope.mr-2
                      | E-Mail
              // End Profile info

        // End Profile detail
        // Footer
        footer.bg-orange.mt_150.whole-container-text-white
          | Copyright 2017 © University of Western Australia
        // End Footer
    // Placed js files at the end of the document so the pages load faster
    script(type='text/javascript', src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js ')
    script(type='text/javascript', src='/js/owl.carousel.js')
    script(type='text/javascript', src='/js/main.js')
