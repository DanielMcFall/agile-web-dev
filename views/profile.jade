extends layout

block content
  if(user)
    #main-content.m-scene
      //- Header
      nav.navbar
        .full-width-container
          a.navbar-brand(href='/')
            img(src='/images/logo.png', width='400', height='45', alt='Logo')
          .fullscreen-menu-holder
            .d-flex.align-items-center
              ul.sidebar-menu
                li
                  a(href='/') Home
                li
                  a(href='/match') Match
                li
                  a(href='/message') Messages
                li
                  a(href='/settings') Settings
                li
                  a(href="/logout") Logout
          button.hamburger-menu-btn.pull-right.for-fullscreen.hamburger-circle
            span toggle menu
          .pull-right
            .email-display
              p #{user.email}
      //- End Header
      .page-container
        // Register content
        .container
          .row.mt_20
            .col-md-4
              a.btn.btn-default.btn-lg.btn-auto(href='/')
                i.fa.fa-home.lg-font
                p.lg-font Home
            .col-md-4
              a.btn.btn-default.btn-lg.btn-auto(href='/settings')
                i.fa.fa-wrench.lg-font
                p.lg-font Edit preferences
            .col-md-4
              a.btn.btn-default.btn-lg.btn-auto(href='/profile')
                i.fa.fa-user-circle.lg-font
                p.lg-font Edit profile
          .mt_10.mb_20
            h3 Edit profile
            .separator
            .row
              .col-sm-6.col-xs-12
                label Name:
                input(type='name', name='name', value='#{user.name}')
              .col-sm-3.col-xs-6
                label Gender:
                select.form-control(name='gender', value='#{user.gender}')
                  option Male
                  option Female
              .col-sm-3.col-xs-6
                label Birthdate:
                #datePicker.input-group.input-append.date
                  input.form-control(type='text', name='date', value='#{user.birthdate.toDateString()}')
                  span.add-on
            .row.mt_10
              .col-sm-6.col-xs-12
                label Suburb:
                input(type='text', name='suburb', value='#{user.suburb}')
              .col-sm-5.col-xs-10
                label Postcode:
                input(type='text', name='postcode', pattern='[0-9\s]*', value='#{user.postcode}')
              .col-sm-1.col-xs-2
                .mt_50.mr-20(onclick='myCurrentPosition()')
                  img(src='images/gps.png', width='18', height='18')
            .row.mt_10
              .col-sm-3.col-xs-6
                label Fitness level:
                select.form-control(name='level', value='#{user.level}')
                  option Beginner
                  option Intermediate
                  option Advanced
              .col-sm-3.col-xs-6
                label Fitness activity:
                select.form-control(name='activity', value='#{user.activity}')
                  option Cardio
                  option Strength
                  option Flexibility
                  option Sports
              .col-sm-5.col-xs-10
                label Area range within:
                input(type='range', value='#{user.range}', min='0' max='50', step='1')
              .col-sm-1.col-xs-2.mt_50 50km
            .row.mt_10
              .col-sm-12.col-xs-12
                label Describe yourself:
                input(type='text' name='bio', value='#{user.bio}')
            .mt_20.mb_40
              button.top_link(type='submit') Update

        //- Footer
        footer.bg-orange.mt_180.whole-container-text-white
          | Copyright 2017 Â© University of Western Australia
        //- Placed js files at the end of the document so the pages load faster
        script(type='text/javascript', src='js/jquery.min.js')
        script(src='js/bootstrap.min.js ')
        script(src='js/bootstrap-datepicker.min.js')
        script(src='js/main.js')
