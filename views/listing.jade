doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    // favicon
    link(rel='shortcut icon', href='images/favicon.ico')
    title Fitness Friends
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Ubuntu:300,400,500', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400', rel='stylesheet')
    // Fonts for icons
    link(href='css/font-awesome.min.css', rel='stylesheet')
    // bootstrap
    link(href='css/bootstrap.css', rel='stylesheet')
    // Styles CSS
    link(href='css/style.css', rel='stylesheet')
    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    #main-content.m-scene
      // Header
      nav.navbar
        .full-width-container
          a.navbar-brand(href='index.html')
            img(src='images/logo.png', width='162', height='45', alt='Logo')
          .fullscreen-menu-holder
            .d-flex.align-items-center
              ul.sidebar-menu
                li
                  a(href='index.html') Home
                li
                  a(href='listing.html') My Matches
                li
                  a(href='#') About Us
                li
                  a(href='#') Contact Us
          button.hamburger-menu-btn.pull-right.for-fullscreen.hamburger-circle
            span toggle menu
      // End Header
      .page-container
        // Page title
        .bg-orange.mb_120.whole-container-text-white.text-center.pt-4.pb-4
          h2 Profile Match
        // End page title
        // Listing
        .container
          .row
            each user in userlist
              .col-md-6.float-left.row_manage.no-padding
                .col-md-6.no-padding.float-left
                  img(src='images/team/keyur.jpg', alt='match', width='1024', height='674')
                  .left_arrow
                .col-md-6.float-left
                  .mt-3.ml-4
                    h4.font-weight-normal #{user.name}
                    .separator
                    div
                      i.fa.fa-map-marker.orange
                      |    #{user.postcode}
                    div
                      i.fa.fa-male.orange
                      |    #{user.gender}
                    div
                      i.fa.fa-futbol-o.orange(style='font-size:10px')
                      |    #{user.activity}
                    div
                      i.fa.fa-bolt.orange
                      |    #{user.level}
                    div
                      a.top_link.top_link_pad(href='listing-detail.html') Read More
        // End Listing
      // Footer
      footer.bg-orange.mt_150.whole-container-text-white
        | Copyright 2017 © University of Western Australia
      // End Footer
    // ==================================================
    // Placed js files at the end of the document so the pages load faster
    script(type='text/javascript', src='js/jquery.min.js')
    script(src='js/bootstrap.min.js ')
// Localized
