doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    // favicon
    link(rel='shortcut icon', href='images/favicon.ico')
    title Fitness Friends
    // Google Fonts
    link(href='https://fonts.googleapis.com/css?family=Ubuntu:300,400,500', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,400', rel='stylesheet')
    // Fonts for icons
    link(href='css/font-awesome.min.css', rel='stylesheet')
    // bootstrap
    link(href='css/bootstrap.css', rel='stylesheet')
    // Styles CSS
    link(href='css/style.css', rel='stylesheet')
    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    #main-content.m-scene
      // Header
      nav.navbar
        .full-width-container
          a.navbar-brand(href='')
            img(src='images/logo.png', width='400', height='45', alt='Logo')
            .fullscreen-menu-holder
              .align-items-center
                .row.col-sm-12.mt-5
                  .col-sm-3.col-xs-12.mt-5
                    .align-center
                      a(href='#')
                        img.rounded-circle(src='images/team/noname.jpg', alt='team', width='550', height='550')
                      .mt-4
                        h4.text-white Username
                  .col-sm-1
                  .col-sm-3.col-xs-12.mt-5
                    ul.sidebar-menu.mt-5
                      li
                        a(href='/settings')
                          i.fa.fa-edit.mr-20
                          |    Edit Profile
                      li
                        a(href='listing')
                          i.fa.fa-list.mr-20
                          |    My Matches
                  .col-sm-1
                  .col-sm-3.col-xs-12.mt-5
                    ul.sidebar-menu.mt-5
                      li
                        a(href='#')
                          i.fa.fa-bell.mr-20
                          |    Notifications
                      li
                        a(href='/logout')
                          i.fa.fa-power-off.mr-20
                          |    Logout
                .row.col-sm-12.mt_100
                  .col-sm-12.col-xs-12
                    hr
                    ul.bottom-menu
                      li
                        a(href='#') Home
                      li
                        a(href='#') About Website
                      li
                        a(href='#') Algorithm
                      li
                        a(href='#') References
                        
          button.hamburger-menu-btn.pull-right.for-fullscreen.hamburger-circle
            span toggle menu
      // End Header
      .page-container
        // Page title
        .bg-orange.mb_120.whole-container-text-white.text-center.pt-4.pb-4
          h2 Profile Match
        // End page title
        // Listing
        .container
          .row
            each user in userlist
              .col-md-6.float-left.row_manage.no-padding
                .col-md-6.no-padding.float-left
                  img(src='images/team/noname.jpg', alt='picture', width='1024', height='674')
                  .left_arrow
                .col-md-6.float-left
                  .mt-3.ml-4
                    h4.font-weight-normal #{user.name}
                    .separator
                    div
                      i.fa.fa-map-marker.orange
                      |    #{user.postcode}
                    div
                      i.fa.fa-male.orange
                      |    #{user.gender}
                    div
                      i.fa.fa-futbol-o.orange(style='font-size:10px')
                      |    #{user.activity}
                    div
                      i.fa.fa-bolt.orange
                      |    #{user.level}
                    div
                      a.top_link.top_link_pad(href='listing-detail') Read More
        // End Listing
      // Footer
      footer.bg-orange.mt_150.whole-container-text-white
        | Copyright 2017 © University of Western Australia
      // End Footer
    // ==================================================
    // Placed js files at the end of the document so the pages load faster
    script(type='text/javascript', src='js/jquery.min.js')
    script(src='js/bootstrap.min.js ')
    script(type='text/javascript', src='js/main.js')
// Localized
